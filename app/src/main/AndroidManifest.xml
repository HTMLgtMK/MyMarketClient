<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gthncz.mymarketclient">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".ClientApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo32"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo32"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        xmlns:tools="http://schemas.android.com/tools"
        tools:replace="android:icon"
        >
        <activity
            android:name=".login.StartActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".login.LoginActivity"></activity>

        <activity android:name=".login.RegisterActivity"></activity>

        <activity android:name=".main.ClientActivity" ></activity>

        <activity android:name=".grant.GrantActivity"></activity>

        <activity android:name=".main.UserActivity"></activity>

        <activity android:name=".main.SettingActivity"></activity>

        <activity android:name=".main.AccountActivity"></activity>

        <activity android:name=".main.PointStoreActivity"></activity>

        <activity android:name=".main.PointActivity" android:clearTaskOnLaunch="true"></activity>

        <activity android:name=".main.Point2BalanceActivity"></activity>

        <activity android:name=".main.BalanceActivity"></activity>

        <activity android:name=".main.BalanceDetailActivity"></activity>

        <activity android:name=".main.PointDetailActivity"></activity>

        <activity android:name=".main.DiscountActivity"></activity>

        <activity android:name=".main.DiscountStoreActivity"></activity>

        <activity android:name=".main.AvatarActivity"></activity>

        <activity android:name=".payment.BPayActivity"></activity>

        <activity android:name=".main.ModifyPayPasswordActivity"></activity>

        <activity android:name=".main.AboutActivity"></activity>

    </application>

</manifest>