<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/textView_item_account_account_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="deal_id"
            android:ellipsize="start"
            android:singleLine="true"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/textView_item_account_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05-10 12:00"
            android:layout_marginTop="5dp"
            android:ellipsize="start"
            android:singleLine="true"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView_item_account_payamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20.00"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/textView_item_account_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易成功"
            android:textSize="14sp"
            />

    </LinearLayout>

</LinearLayout>