<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textView_item_mydiscount_discount_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="六一大优惠"
                android:textSize="18sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:id="@+id/textView_item_mydiscount_discount_extend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="九折"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/discount_info"
                    />

                <TextView
                    android:id="@+id/textView_item_mydiscount_discount_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:text="减0.1元"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/discount_info"
                    />

                <TextView
                    android:id="@+id/textView_item_mydiscount_discount_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:text="@string/vip"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/discount_info"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textView_item_mydiscount_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/possessed_discount"
                android:layout_gravity="center"
                />


            <TextView
                android:id="@+id/textView_item_mydiscount_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/possessed_discount"
                android:layout_gravity="center"
                />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView_item_mydiscount_expire_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:text="@string/expire_duration"
        />

</LinearLayout>