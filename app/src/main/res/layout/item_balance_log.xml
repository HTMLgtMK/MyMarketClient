<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:gravity="start"
        >

        <TextView
            android:id="@+id/textView_item_balance_log_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转账"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/textView_item_balance_log_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额: 0.00"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        >

        <TextView
            android:id="@+id/textView_item_balance_log_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-05-01"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            />

        <TextView
            android:id="@+id/textView_item_balance_log_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+10.00"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            />

    </LinearLayout>

</RelativeLayout>